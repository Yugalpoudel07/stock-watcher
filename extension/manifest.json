{
  "manifest_version": 3,
  "name": "Stock Watcher",
  "version": "1.0",
  "description": "Highlight tickers and show price predictions",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
